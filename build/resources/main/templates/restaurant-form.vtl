<h3>Add a restaurant:</h3>
<div class="form-container">
<form action="/success" method="post">




  <div class="row">
    <div class="form-group col-xs-6">
      <input class="form-control" type="text" name="name" id="name" placeholder="Name:"></input>
    </div>


    <div class="form-group col-xs-6">
      <input class="form-control" type="text" name="number" id="number" placeholder="Phone number:"></input>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-xs-6">
      <input class="form-control" type="text" name="hours" id="hours" placeholder="Hours:"></input>
    </div>

    <div class="form-group col-xs-6">
      <input class="form-control" type="text" name="address" id="address" placeholder="Address:"></input>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-xs-6">
      <input class="form-control" type="text" name="city" id="city" placeholder="City:"></input>
    </div>

    <div class="form-group col-xs-2">
      <select class="form-control" id="state" name="state">
        <option name="state" disabled selected="selected"></option>
        <option name="state" disabled>Select a state:</option>
        <option name="state" id="state" value="AL">Alabama</option>
