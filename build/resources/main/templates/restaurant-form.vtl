        <option name="state" id="state" value="CA">California</option>
        <option name="state" id="state" value="CO">Colorado</option>
        <option name="state" id="state" value="CT">Connecticut</option>
        <option name="state" id="state" value="DE">Delaware</option>
        <option name="state" id="state" value="FL">Florida</option>
        <option name="state" id="state" value="GA">Georgia</option>
        <option name="state" id="state" value="HI">Hawaii</option>
        <option name="state" id="state" value="ID">Idaho</option>
        <option name="state" id="state" value="IL">Illinois</option>
        <option name="state" id="state" value="IN">Indiana</option>
        <option name="state" id="state" value="IA">Iowa</option>
        <option name="state" id="state" value="KS">Kansas</option>
        <option name="state" id="state" value="KY">Kentucky</option>
        <option name="state" id="state" value="LA">Louisiana</option>
        <option name="state" id="state" value="ME">Maine</option>
        <option name="state" id="state" value="MD">Maryland</option>
        <option name="state" id="state" value="MA">Massachuesetts</option>
        <option name="state" id="state" value="MI">Michigan</option>
        <option name="state" id="state" value="MN">Minnesota</option>
        <option name="state" id="state" value="MS">Mississippi</option>
        <option name="state" id="state" value="MO">Missouri</option>
        <option name="state" id="state" value="MT">Montana</option>
        <option name="state" id="state" value="NE">Nebraska</option>
        <option name="state" id="state" value="NV">Nevada</option>
        <option name="state" id="state" value="NH">New Hampshire</option>
        <option name="state" id="state" value="NJ">New Jersey</option>
        <option name="state" id="state" value="NM">New Mexico</option>
        <option name="state" id="state" value="NY">New York</option>
        <option name="state" id="state" value="NC">North Carolina</option>
        <option name="state" id="state" value="ND">North Dakota</option>
        <option name="state" id="state" value="OH">Ohio</option>
        <option name="state" id="state" value="OK">Oklahoma</option>
        <option name="state" id="state" value="OR">Oregon</option>
        <option name="state" id="state" value="PA">Pennsylvania</option>
        <option name="state" id="state" value="RI">Rhode Island</option>
        <option name="state" id="state" value="SC">South Carolina</option>
        <option name="state" id="state" value="SD">South Dakota</option>
        <option name="state" id="state" value="TN">Tennessee</option>
        <option name="state" id="state" value="TX">Texas</option>
        <option name="state" id="state" value="UT">Utah</option>
